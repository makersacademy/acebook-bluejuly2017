<div class="container">
  <div class="col-md-2 col-md-offset-5">

    <div class="centered">
      <h2>Newsfeed</h2>
      <% unless (current_user.nil?) %>
        <%= form_for @post do |form| %>
          <%= form.label :message %>
          <%= form.text_area :message %>
          <%= form.submit "Submit" %>
        <% end %>
      <% end %>



    <% @posts_sorted.each do |post| %>
    
      <div id="share-buttons">
      <!-- Email -->
      <a href="mailto:?Subject=Simple <%= post.message %>">
          <img src="https://simplesharebuttons.com/images/somacro/email.png" alt="Email" />
        </a>
      <!-- Facebook -->
      <a href="http://www.facebook.com/sharer.php" target="_blank">
          <img src="https://simplesharebuttons.com/images/somacro/facebook.png" alt="Facebook" />
      </a>
      <!-- Twitter -->
      <a href="https://twitter.com/share?text=<%= post.message %>;" target="_blank">
          <img src="https://simplesharebuttons.com/images/somacro/twitter.png" alt="Twitter" />
      </a>
    </div>
    
    <p><%= simple_format(auto_link(post.message)) %>
      <%= "#{post.created_at.strftime("%H:%M:%S, %d %b %Y")}"%>
    </p>
    <span><%= post.get_upvotes.size %> like this</span>
    <br>
    <%= link_to like_post_path(post), method: :put do %>
    <button name="likePost<%=post.id %>">Like</button>
    <% end %>
    <%= link_to unlike_post_path(post), method: :put do %>
    <button name="unlikePost<%=post.id %>">Unlike</button>
    <% end %>
    <br>
    
      <p><%= simple_format(auto_link(post.message)) %>
        <%= "#{post.created_at.strftime("%H:%M:%S, %d %b %Y")}"%>
      </p>
      <span><%= post.get_upvotes.size %> like this</span>
      <br>
      <%= link_to like_post_path(post), method: :put do %>
        <button name="likePost<%=post.id %>">Like</button>
      <% end %>
      <%= link_to unlike_post_path(post), method: :put do %>
        <button name="unlikePost<%=post.id %>">Unlike</button>
     
        <p><%= simple_format(auto_link(post.message)) %>
          <%= "#{post.created_at.strftime("%H:%M:%S, %d %b %Y")}"%>
        </p>
        <span><%= post.get_upvotes.size %> like this</span>
        <br>
        <% unless (current_user.nil?) %>
          <%= link_to like_post_path(post), method: :put do %>
            <button name="likePost<%=post.id %>">Like</button>
          <% end %>
          <%= link_to unlike_post_path(post), method: :put do %>
            <button name="unlikePost<%=post.id %>">Unlike</button>
          <% end %>
          <%= link_to 'Delete', post_path(post), method: :delete %>
        <% end %>
        <br>
        <br>

      <% end %>
    </div>
  </div>
</div>
