<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= gravatar_for chatmessage.user %>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= chatmessage.user.name %> at <%= chatmessage.timestamp %> says</span><br>
          <%= chatmessage.body %>
        </p>
      </div>
    </div>
  </div>
</div>
